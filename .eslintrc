// .eslintrc
{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
  },
  "plugins": ["@typescript-eslint"],
  // HERE
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],

  "rules": {
    "no-unused-vars": "warn",
    "@typescript-eslint/consistent-type-definitions": ["warn", "type"],
  },

  "env": {
    "browser": true,
    "es2021": true
  }
}